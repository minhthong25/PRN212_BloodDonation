<Window x:Class="BloodBankSystem.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:BloodBankSystem"
       mc:Ignorable="d"
       Title="MainWindow" WindowState="Maximized">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="700">
            <TextBlock Text="Blood Bank" FontSize="80" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Border BorderBrush="Gray" BorderThickness="1" Padding="80" CornerRadius="12">
                <StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Email:" Width="60" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBox x:Name="txtEmail" Width="300" Height="30"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Password:" Width="60" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <PasswordBox x:Name="txtPassword" Width="280" Height="30"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnLogin" Content="Login" Width="100" Height="35" Margin="10,0" Click="btnLogin_Click"/>
                        <Button x:Name="btnRegister" Content="Register" Width="100" Height="35" Margin="10,0" Click="btnRegister_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
