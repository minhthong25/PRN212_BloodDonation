<Window x:Class="BloodBankSystem.UserDisplay.DonorDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin người hiến máu"
        WindowState="Maximized"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14"
        Height="640"
        Width="1000">

    <Window.Resources>
        <!-- Style bo góc cho Border (dùng được trực tiếp) -->
        <Style x:Key="CardStyle"
               TargetType="Border">
            <Setter Property="CornerRadius"
                    Value="10" />
            <Setter Property="Background"
                    Value="#FFFFFF" />
            <Setter Property="BorderBrush"
                    Value="#D0D0D0" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Padding"
                    Value="15" />
            <Setter Property="Margin"
                    Value="0,0,0,10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5"
                                      ShadowDepth="2"
                                      Color="#888888"
                                      Opacity="0.2" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style bo góc cho Button -->
        <Style x:Key="RoundedButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#2980B9" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Height"
                    Value="40" />
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="THÔNG TIN NGƯỜI HIẾN MÁU"
                   FontSize="30"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"
                   TextDecorations="Underline" />

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN -->
            <StackPanel Grid.Column="0"
                        Margin="0,0,10,0">
                <!-- Donor Info -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🧍 Thông tin cá nhân"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#34495E"
                                   Margin="0,0,0,10" />
                        <StackPanel x:Name="donorInfoPanel"
                                    Margin="10,0,0,0">
                            <TextBlock x:Name="txtFullName" />
                            <TextBlock x:Name="txtPhone" />
                            <TextBlock x:Name="txtCreatedAt" />
                            <TextBlock x:Name="txtIsActive" />
                            <TextBlock x:Name="txtBloodGroup" />
                            <TextBlock x:Name="txtLastDonation" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Events -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📅 Các sự kiện hiến máu"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#34495E"
                                   Margin="0,0,0,10" />
                        <ScrollViewer Height="300">
                            <ListBox x:Name="eventListBox"
                                     SelectedValuePath="Id">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1"
                                                BorderBrush="#DDDDDD"
                                                Background="White"
                                                Padding="10"
                                                Margin="0,0,0,10"
                                                CornerRadius="5">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="Bold"
                                                           FontSize="16" />
                                                <TextBlock Text="{Binding EventDate, StringFormat='Ngày tổ chức: {0:dd/MM/yyyy HH:mm}'}" />
                                                <TextBlock Text="{Binding EventEndDate, StringFormat='Kết thúc: {0:dd/MM/yyyy HH:mm}'}" />
                                                <TextBlock Text="{Binding Address, StringFormat='Địa điểm: {0}'}" />
                                                <TextBlock Text="{Binding Description, StringFormat='Mô tả: {0}'}"
                                                           TextWrapping="Wrap" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                        <Button Content="➕ Đăng ký hiến máu"
                                Click="RegisterEvent_Click"
                                Style="{StaticResource RoundedButtonStyle}"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- RIGHT COLUMN -->
            <StackPanel Grid.Column="1"
                        Margin="10,0,0,0">
                <!-- Test Result -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🧪 Kết quả xét nghiệm gần nhất"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#34495E"
                                   Margin="0,0,0,10" />
                        <StackPanel x:Name="testResultPanel"
                                    Margin="10,0,0,0">
                            <TextBlock x:Name="txtTestDate" />
                            <TextBlock x:Name="txtResultNote" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Appointment -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📌 Lịch hẹn hiến máu sắp tới"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#34495E"
                                   Margin="0,0,0,10" />
                        <StackPanel x:Name="appointmentPanel"
                                    Margin="10,0,0,0">
                            <TextBlock x:Name="txtAppointmentDate" />
                            <TextBlock x:Name="txtLocation" />
                            <TextBlock x:Name="txtStatus" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- History -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📖 Lịch sử hiến máu"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#34495E"
                                   Margin="0,0,0,10" />
                        <StackPanel x:Name="appointmentPanel1"
                                    Margin="10,0,0,0">
                            <TextBlock x:Name="txtAppointmentDate1" />
                            <TextBlock x:Name="txtLocation1" />
                            <TextBlock x:Name="txtStatus1" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Return Button -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="🔙 Quay lại"
                    Click="btnReturn_Click"
                    Style="{StaticResource RoundedButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
