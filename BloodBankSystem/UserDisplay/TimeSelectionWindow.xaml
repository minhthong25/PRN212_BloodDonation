<Window x:Class="BloodBankSystem.UserDisplay.TimeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn thời gian hiến máu"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Chọn khung giờ hiến máu:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />

            <ComboBox x:Name="comboTimeSlots"
                      Height="30"
                      FontSize="14"
                      DisplayMemberPath="ToString" />

            <Button Content="Xác nhận"
                    Click="Confirm_Click"
                    Margin="0,20,0,0"
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
