<Window x:Class="BloodBankSystem.UserDisplay.TimeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn thời gian hiến máu"
        Height="220"
        Width="350"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15">
        <TextBlock Text="Chọn ngày hiến máu:"
                   FontSize="14"
                   Margin="0,0,0,5" />
        <DatePicker x:Name="datePicker"
                    SelectedDateFormat="Short"
                    Language="vi-VN" />

        <TextBlock Text="Chọn giờ:"
                   Margin="0,10,0,5"
                   FontSize="14" />
        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="hourBox"
                      Width="60" />
            <ComboBox x:Name="minuteBox"
                      Width="60"
                      Margin="10,0,0,0" />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Xác nhận"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="Confirm_Click" />
            <Button Content="Huỷ"
                    Width="80"
                    Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>

