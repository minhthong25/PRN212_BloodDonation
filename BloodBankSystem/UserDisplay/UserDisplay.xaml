<Window x:Class="BloodBankSystem.UserDisplay.UserDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodBankSystem.UserDisplay"
        mc:Ignorable="d"
        Title="User Display" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Welcome to Blood Bank System" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <TextBlock x:Name="txtUserInfo" 
                       FontSize="16" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>
        </StackPanel>
        
        <Grid Grid.Row="1" Margin="20">
            <!-- Add more content here based on user role -->
        </Grid>
    </Grid>
</Window>
