<Window x:Class="BloodBankSystem.AdminDisplay.BloodEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodBankSystem.AdminDisplay"
        mc:Ignorable="d"
        Title="Blood Donation Events" Height="450" Width="800" WindowState="Maximized">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Blood Donation Events" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Locations Section -->
        <GroupBox Grid.Row="1"
                  Header="Donation Locations"
                  Margin="0,0,0,20">
            <DataGrid x:Name="dgLocations"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="LightGray"
                      GridLinesVisibility="All"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      CanUserSortColumns="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      Height="264">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding LocationId}"
                                        Width="50" />
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        Width="*" />
                    <DataGridTextColumn Header="Address"
                                        Binding="{Binding Address}"
                                        Width="*" />
                    <DataGridTemplateColumn Header="Action"
                                            Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit"
                                        Click="EditLocation_Click"
                                        Width="80"
                                        Height="30"
                                        Margin="5"
                                        Background="#2196F3"
                                        Foreground="White" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Delete"
                                            Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"
                                        Click="DeleteLocation_Click"
                                        Background="Crimson"
                                        Foreground="White"
                                        Width="60" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
                     
        </GroupBox>

        <!-- Appointments Section -->
        <GroupBox Grid.Row="2">
            <DataGrid x:Name="dgAppointments"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="LightGray"
                      GridLinesVisibility="All"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      CanUserSortColumns="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      Height="264">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding AppointmentId}"
                                        Width="50" />
                    <DataGridTextColumn Header="Donor"
                                        Binding="{Binding Donor.FullName}"
                                        Width="*" />
                    <DataGridTextColumn Header="Location"
                                        Binding="{Binding Location.Name}"
                                        Width="*" />
                    <DataGridTextColumn Header="Date"
                                        Binding="{Binding AppointmentDate, StringFormat=d}"
                                        Width="120" />
                    <DataGridCheckBoxColumn Header="Completed"
                                            Binding="{Binding IsCompleted}"
                                            Width="100" />

                    <!-- Edit Button -->
                    <DataGridTemplateColumn Header="Action"
                                            Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit"
                                        Click="EditAppointment_Click"
                                        Width="80"
                                        Height="30"
                                        Margin="5"
                                        Background="#2196F3"
                                        Foreground="White" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Delete Button -->
                    <DataGridTemplateColumn Header="Delete"
                                            Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"
                                        Click="DeleteAppointment_Click"
                                        Background="Crimson"
                                        Foreground="White"
                                        Width="60" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>


        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10">
            <Button x:Name="btnAddLocation"
                    Content="Add Location"
                    Width="120"
                    Margin="5,0"
                    Click="btnAddLocation_Click" />
        </StackPanel>
    </Grid>
</Window>
