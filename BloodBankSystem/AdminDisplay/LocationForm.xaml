<Window x:Class="BloodBankSystem.AdminDisplay.LocationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Location Form"
        Height="400"
        Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtName" Margin="0,5"/>

            <TextBlock Text="Address:"/>
            <TextBox x:Name="txtAddress" Margin="0,5"/>

            <TextBlock Text="Choose a blood donation start date:"
                       Margin="0,5" />

            <DatePicker x:Name="dpEventDate"
                        SelectedDateFormat="Short" 
                        Language="vi-VN"/>

            <TextBlock Text="Choose time"
                       Margin="0,5" />

            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="cbHour"
                          Width="60" />
                <ComboBox x:Name="cbMinute"
                          Width="60" 
                          Margin="10,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Choose a blood donation end date:"
                       Margin="0,5" />
            
            <DatePicker x:Name="dpEndDate"
                        SelectedDateFormat="Short"
                        Language="vi-VN" />

            <TextBlock Text="Choose end time:"
                       Margin="0,5" />
            
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="cbEndHour"
                          Width="60" />
                <ComboBox x:Name="cbEndMinute"
                          Width="60"
                          Margin="10,0,0,0" />
            </StackPanel>

            <Button Content="Save" Width="80" Margin="0,10,0,0" HorizontalAlignment="Right" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>

