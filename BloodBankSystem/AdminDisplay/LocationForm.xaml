<Window x:Class="BloodBankSystem.AdminDisplay.LocationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Location Form"
        Height="299"
        Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtName" Margin="0,5"/>

            <TextBlock Text="Address:"/>
            <TextBox x:Name="txtAddress" Margin="0,5"/>

            <TextBlock Text="Event Start Day:" />
            <TextBox x:Name="txtEventStartDay" Margin="0,5" />

            <TextBlock Text="Event End Day:" />
            <TextBox x:Name="txtEventEndDay" Margin="0,5" />

            <Button Content="Save" Width="80" Margin="0,10,0,0" HorizontalAlignment="Right" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
