<Window x:Class="BloodBankSystem.AdminDisplay.RequestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodBankSystem.AdminDisplay"
        mc:Ignorable="d"
        Title="RequestDetailWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding RequestCode, StringFormat='Chi tiết đơn hiến máu: {0}'}"
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="{Binding UserName, StringFormat='Người hiến: {0}'}" FontSize="14" Margin="0,4"/>
            <TextBlock Text="{Binding BloodGroup, StringFormat='Nhóm máu: {0}'}" FontSize="14" Margin="0,4"/>
            <TextBlock Text="{Binding Component, StringFormat='Thành phần: {0}'}" FontSize="14" Margin="0,4"/>
            <TextBlock Text="{Binding PreferredDate, StringFormat='Ngày mong muốn: {0:yyyy-MM-dd}'}" FontSize="14" Margin="0,4"/>
            <TextBlock Text="{Binding TimeFrame, StringFormat='Khung giờ: {0}'}" FontSize="14" Margin="0,4"/>
            <TextBlock Text="{Binding Status, StringFormat='Trạng thái: {0}'}" FontSize="14" Margin="0,10"/>

            <TextBlock Text="Ghi chú nhân viên:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="NoteTextBox" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">

                <Button Content="Xác nhận" Width="100"
                        Background="Green" Foreground="White"
                        Click="Approve_Click"/>
                <Button Content="Từ chối" Width="100" Margin="10,0"
                        Background="Gray" Foreground="White"
                        Click="Reject_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>