<Window x:Class="BloodBankSystem.AdminDisplay.RequestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RequestDetailWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

            <TextBlock Text="{Binding RequestId, StringFormat='Chi tiết đơn hiến máu: {0}'}"
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20"
                       TextAlignment="Left" HorizontalAlignment="Left"/>

            <TextBlock FontSize="14" Margin="0,4" TextAlignment="Center">
                <Run Text="Họ tên: " FontWeight="Bold"/>
                <Run Text="{Binding Recipient.RecipientNavigation.FullName, TargetNullValue='[Không có dữ liệu]'}"/>
            </TextBlock>

            <TextBlock FontSize="14" Margin="0,4" TextAlignment="Center">
                <Run Text="Ngày yêu cầu: " FontWeight="Bold"/>
                <Run Text="{Binding RequestDate, TargetNullValue='[Không có]'}"/>
            </TextBlock>

            <TextBlock FontSize="14" Margin="0,4" TextAlignment="Center">
                <Run Text="Nhóm máu: " FontWeight="Bold"/>
                <Run Text="{Binding BloodGroup.GroupName, TargetNullValue='[Không có dữ liệu]'}"/>
            </TextBlock>

            <TextBlock FontSize="14" Margin="0,4" TextAlignment="Center">
                <Run Text="Trạng thái: " FontWeight="Bold"/>
                <Run Text="{Binding Status, TargetNullValue='[Không rõ]'}"/>
            </TextBlock>

            <TextBlock Text="Ghi chú nhân viên:" FontWeight="Bold" Margin="0,10,0,5" TextAlignment="Center"/>
            <TextBox x:Name="NoteTextBox" Height="60" AcceptsReturn="True" TextWrapping="Wrap" HorizontalAlignment="Center" Width="300"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Xác nhận" Width="100"
                        Background="Green" Foreground="White"
                        Click="Approve_Click"/>
                <Button Content="Từ chối" Width="100" Margin="10,0"
                        Background="Gray" Foreground="White"
                        Click="Reject_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
